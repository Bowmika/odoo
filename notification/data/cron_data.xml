<odoo>
    <data>
        <record id="ir_cron_send_anniversary_mail" model="ir.cron">
            <field name="name">Send Anniversary Mail</field>
            <field name="model_id" ref="model_celebration_event"/>
            <field name="state">code</field>
            <field name="code">model.send_anniversary_mail()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
        <!-- Define similar records for birthday and team anniversary emails -->
    </data>
</odoo>